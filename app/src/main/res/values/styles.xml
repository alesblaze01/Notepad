<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
<!--        <item name="android:textColor">@color/colorGreen</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="course_title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_add_circle_outline_black_24dp</item>
        <item name="tint">@color/colorGreen</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>
</resources>
