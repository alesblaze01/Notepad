<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Common Settings">
        <EditTextPreference
            android:defaultValue="false"
            android:key="@string/preference_key_user_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/prefrence_user_name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue="false"
            android:key="@string/preference_key_email_address"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/preference_titile_email_address_"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
